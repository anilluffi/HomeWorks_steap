<Window x:Class="WpfAppSql.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppSql"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFCBE4F3">
        <ComboBox x:Name="comboBoxTables" HorizontalAlignment="Left" Margin="10,37,0,0" VerticalAlignment="Top" Width="146" SelectionChanged="comboBoxTables_SelectionChanged"/>
        <TextBox x:Name="TextBoxQuery"   HorizontalAlignment="Left" Margin="180,37,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="516" Height="21"/>
        <Label Content="Tables:" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top"/>
        <Label Content="Sql command" HorizontalAlignment="Left" Margin="180,6,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="dataGrid" Margin="10,71,10,10" AutoGenerateColumns="True"  />
        <Button x:Name="btnFill" Content="Fill ⇓" HorizontalAlignment="Left" Margin="701,37,0,0" VerticalAlignment="Top" Height="21" Click="btnFill_Click"/>
        <Button x:Name="btnSave" Content="Save ⇑" HorizontalAlignment="Left" Margin="735,37,0,0" VerticalAlignment="Top" Height="21" Click="btnSave_Click"/>

    </Grid>
</Window>
